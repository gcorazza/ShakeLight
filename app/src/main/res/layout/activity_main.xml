<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="SHAKE_LIGHT_SERVICE"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?android:attr/listDivider" />

    <ImageButton
        android:id="@+id/setServiceBtn"
        android:layout_width="288dp"
        android:layout_height="291dp"
        android:background="#000000"
        android:fadingEdge="horizontal"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_offline"
        android:onClick="setShakeLightService" />

    <TextView
        android:id="@+id/infoField"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/shakeTut"
        android:layout_width="120dp"
        android:layout_height="107dp"
        app:srcCompat="@drawable/shake_tut0" />

</LinearLayout>